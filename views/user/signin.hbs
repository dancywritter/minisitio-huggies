<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <h1>Ingresar</h1>
    {{#if hasErrors }}
      <div class="alert alert-danger">
        {{# each messages}}
        <p>{{ this }}</p>
        {{/each}}
      </div>
    {{/if}}
    <form class="" action="/user/signin" method="post">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="email">
        <p class="help-block">Ingresar con su email corporativo pre-autorizado.</p>
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="password">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <br />
        <button class="btn btn-primary" type="submit" name="button">Ingresar</button>
      </div>
    </form>
    <p><a href="/user/signup">Pide acceso aqu√≠</a></p>
  </div>
</div>
