{{#if login}}
<div class="row">
  <div class="col-md-10 col-sm-12">
      <h3>Historial de Pedidos</h3>
      <hr>
      {{#each orders }}
          <div class="panel panel-default">
              <div class="panel-heading">
                <div class="panel-title">
                  <span>User: {{ this.user.firstname }} {{ this.user.lastname }} ({{ this.user.email }})</span><br>
                  <span>Fecha de Pedido: {{ this.date }}</span>
                </div>
              </div>
              <div class="panel-body">
                  <ul class="list-group">
                      {{#each this.items }}
                          <li class="list-group-item">
                              {{ this.item.name }} | {{ this.item.sku }} | {{ this.qty }} Unidades
                          </li>
                      {{/each}}
                  </ul>
                  Comentarios: {{this.comments}}
              </div>
              <div class="panel-footer">
                <strong>Total:   {{this.cart.totalQty}} Unidades |  US${{toFixed this.cart.totalPrice 0}} (Antes de descuentos)</strong>
              </div>
          </div>
      {{/each}}
  </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No hay pedidos aquí.<br>
          Quizás hace falta <a href="/user/signin">ingresar primero?</a></h2>
    </div>
</div>
{{/if}}
