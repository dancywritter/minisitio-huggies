<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
<div class="row">
  {{# each this }}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          {{# each images}}
            {{#if @first }}
              <div class="item active">
                <img src="{{ this }}" alt="...">
              </div>
            {{else}}
              <div class="item">
                <img src="{{ this }}" alt="...">
              </div>
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="caption">
        <h3>{{ this.name }}</h3>
        <p class="description">{{ this.description }}</p>
        <div class="clearfix">
          <ul class="list-group">
            {{#each prices}}
            <li class="list-group-item">
              <span class="badge">${{ this.price }}</span>
              <span>Tier {{ this.tier }}: {{ this.qty }} unidades</span>
            </li>
            {{/each}}
          </ul>
            <form class="form form-inline" action="/add-to-cart/{{id}}" method="get">
              <div class="form-group col-sm-4 col-md-6">
                <input type="number" class="form-control pull-left" id="addQty" name="addQty" placeholder="MOQ={{ this.moq }}" required size="9" min="{{this.moq}}">
              </div>
              <input type="submit" class="btn btn-success pull-right" value="Agregar">
            </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{/each}}
